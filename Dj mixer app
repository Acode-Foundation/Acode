<h2>ğŸ§ Plug & Play DJ Mixer (10 Track)</h2>

<script>
let tracks = [];
for(let i=1;i<=10;i++){
  tracks[i] = new Audio("track"+i+".mp3");
}
function play(i){ tracks[i].play(); }
function pause(i){ tracks[i].pause(); }
function volume(i,v){ tracks[i].volume=v; }
</script>

<!-- 10 Tracks -->
<div id="mixer">
<script>
for(let i=1;i<=10;i++){
  document.write(`
  <div class="track">
    <h3>Track ${i}</h3>
    <button onclick="play(${i})">â–¶ Play</button>
    <button onclick="pause(${i})">â¸ Pause</button><br>
    Volume:
    <input type="range" min="0" max="1" step="0.01"
     value="1" oninput="volume(${i},this.value)">
  </div>
  `);
}
</script>
</div>


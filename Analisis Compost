<script>
  const questions = {
    q1: ["A tierra h√∫meda", "A amon√≠aco", "A podrido", "A dulce o fermento", "A nada :("],
    q2: ["Marr√≥n oscuro o negro", "Verde", "Marr√≥n claro o amarillento", "Blanco"],
    q3: ["Suelta y granulosa", "H√∫meda y goteante", "Seca y fr√°gil", "A√∫n siento restos de los productos originales"],
    q4: ["Entre 1 y 6", "Entre 6 y 8", "Entre 8 y 14", "No lo s√©"],
    q5: ["Todas", "Varias pero no todas"],
    q6: ["Todas", "Algunas", "Ninguna de las anteriores"]
  };

  function calculateResult() {
    let total = 0;
    for(let i=1; i<=6; i++) {
      const selected = document.querySelector(`input[name=q${i}]:checked`);
      if(!selected) {
        alert(`Por favor, responde la pregunta ${i}`);
        return;
      }
      total += parseInt(selected.value);
    }

    const resultBox = document.getElementById("result");
    let message = "";

    if(total >= 10) {
      message = "üü¢ Compost maduro y listo para usar. ¬°Felicitaciones!";
    } else if(total >= 6) {
      message = "üü° Compost en proceso: buen trabajo, segu√≠ cuid√°ndolo.";
    } else {
      message = "üî¥ Compost con problemas: revis√° humedad, residuos y aireaci√≥n.";
    }

    resultBox.innerHTML = message;
    resultBox.style.display = "block";
  }

  function generateRandomAnswers() {
    for(let i=1; i<=6; i++) {
      const options = document.getElementsByName(`q${i}`);
      const randomIndex = Math.floor(Math.random() * options.length);
      options[randomIndex].checked = true;
    }
    document.getElementById("result").style.display = "none";
  }
</script>
